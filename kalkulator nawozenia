<script>
    function calculate() {
        // 1. Pobranie danych
        const factor = parseFloat(document.getElementById('nutrient').value);
        const current = parseFloat(document.getElementById('current').value);
        const target = parseFloat(document.getElementById('target').value);
        const concentration = parseFloat(document.getElementById('concentration').value);
        const rowWidthCm = parseFloat(document.getElementById('rowWidth').value);
        const rowLength = parseFloat(document.getElementById('rowLength').value);
        const rowCount = parseFloat(document.getElementById('rowCount').value);

        // Walidacja
        if (current >= target) {
            alert("Poziom aktualny jest wy≈ºszy lub r√≥wny celowi. Nawo≈ºenie nie jest konieczne!");
            return;
        }

        // 2. Obliczenia logiczne
        
        // Deficyt (mg/l)
        const deficit = target - current;

        // Objƒôto≈õƒá gleby na 1 m2 (przy g≈Çƒôboko≈õci 30cm) = 300 litr√≥w
        const soilVolume = 300; 

        // BrakujƒÖcy czysty sk≈Çadnik na 1 m2 (mg -> g)
        const deficitPerM2_g = (deficit * soilVolume) / 1000;

        // Zamiana na formƒô tlenkowƒÖ (K -> K2O itd.)
        const oxidePerM2 = deficitPerM2_g * factor;

        // Ilo≈õƒá nawozu na 1 m2 (uwzglƒôdniajƒÖc stƒô≈ºenie %)
        const fertilizerPerM2 = oxidePerM2 / (concentration / 100);

        // Skalowanie na pas uprawny (szeroko≈õƒá rzƒôdu)
        // Je≈õli pas ma 100cm (1m) to mno≈ºnik jest 1. Je≈õli 80cm to 0.8
        const widthMultiplier = rowWidthCm / 100;
        
        // Dawka na 1 metr bie≈ºƒÖcy rzƒôdu
        const fertilizerPerLinearMeter = fertilizerPerM2 * widthMultiplier;

        // Dawka na jeden ca≈Çy rzƒÖd (kg)
        const fertilizerPerRowKg = (fertilizerPerLinearMeter * rowLength) / 1000;

        // Dawka ca≈Çkowita (kg)
        const totalFertilizer = fertilizerPerRowKg * rowCount;

        // 3. Wy≈õwietlanie wynik√≥w
        document.getElementById('resDeficit').innerText = deficit.toFixed(0) + " mg/l";
        document.getElementById('resPerM2').innerText = fertilizerPerM2.toFixed(1) + " g";
        document.getElementById('resPerLinear').innerText = fertilizerPerLinearMeter.toFixed(1) + " g";
        document.getElementById('resPerRow').innerText = fertilizerPerRowKg.toFixed(2) + " kg";
        document.getElementById('resTotal').innerText = totalFertilizer.toFixed(1) + " kg";

        // Ostrze≈ºenie o wysokiej dawce
        const warningBox = document.getElementById('warningBox');
        if (fertilizerPerM2 > 25) {
            warningBox.style.display = 'block';
        } else {
            warningBox.style.display = 'none';
        }

        // Pokazanie sekcji wynik√≥w
        document.getElementById('result').style.display = 'block';
    }
</script>

